{
  "name": "confluences",
  "version": "1.0.0",
  "description": "An art installation app that captures and segments full-body photos from webcam",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run build:watch\"",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "build:dev": "webpack --mode development",
    "dev:start": "npm run build:dev && npm start",
    "install:electron": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "react", "tensorflow", "bodypix", "webcam", "segmentation"],
  "author": "Confluences Art Installation",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.4",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tensorflow/tfjs": "^4.15.0",
    "@tensorflow-models/body-pix": "^2.2.1"
  },
  "build": {
    "appId": "com.confluences.app",
    "productName": "Confluences",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "node_modules/**/*"
    ]
  }
}
